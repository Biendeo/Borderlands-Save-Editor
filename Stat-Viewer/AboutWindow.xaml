<Window x:Class="Stat_Viewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stat_Viewer"
        mc:Ignorable="d"
        Title="About" Height="240" Width="320">
	
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Label Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Borderlands Save Editor" FontSize="24"/>
		<Label Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Created by Biendeo" FontSize="16"/>
	</Grid>
</Window>
